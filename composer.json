{
  "name": "household/payroll-web-app",
  "description": "Household Payroll Web App (Phase 1 - Bootstrap & Scaffolding)",
  "type": "project",
  "require": {
    "slim/slim": "^4.12",
    "php-di/php-di": "^7.1",
    "php-di/slim-bridge": "^3.4",
    "nyholm/psr7": "^1.8",
    "vlucas/phpdotenv": "^5.6",
    "nyholm/psr7-server": "^1.1",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/helpers/helpers.php"
    ]
  },
  "scripts": {
    "serve": "php -S localhost:8080 -t public public/index.php",
    "seed:i18n": "php database/seeds/seed_i18n.php"
  }
}
